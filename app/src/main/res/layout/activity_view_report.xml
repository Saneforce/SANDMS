<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrolllayout"
    tools:context="com.saneforce.dms.activity.ViewReportActivity">
    <include
        layout="@layout/custom_toolbar" />


    <androidx.core.widget.NestedScrollView
        android:id="@+id/ns_order_details"
        android:layout_below="@+id/toolbar_top"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_back"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:background="@drawable/text_back"
                android:id="@+id/linearlayout">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:background="@drawable/text_back">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ord.Id : "
                                android:textColor="@android:color/black" />

                            <TextView
                                android:id="@+id/txt_product_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@android:color/black" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date : "
                                android:textColor="@android:color/black" />

                            <TextView
                                android:id="@+id/txt_order_Date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@android:color/black" />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="10dp"
                        android:id="@+id/ll_order_type"
                        android:layout_marginBottom="10dp"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order Type : "
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/tv_order_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Field Order"
                            android:textColor="@android:color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="10dp"
                        android:id="@+id/ll_dispatch_date"
                        android:layout_marginBottom="10dp"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment Date : "
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/tv_dispatch_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="27/10/2021"
                            android:textColor="@android:color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="10dp"
                        android:id="@+id/ll_payment_type"
                        android:layout_marginBottom="10dp"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment Type : "
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/tv_payment_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Offline"
                            android:textColor="@android:color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="10dp"
                        android:id="@+id/ll_check_number"
                        android:layout_marginBottom="10dp"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Check/UTR No. : "
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/tv_check_utr_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="123456789"
                            android:textColor="@android:color/black" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="10dp"
                        android:id="@+id/ll_attachment"
                        android:layout_marginBottom="10dp"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Attachment : "
                            android:textColor="@android:color/black" />

                        <ImageView
                            android:id="@+id/iv_attachment"
                            android:layout_width="150dp"
                            android:layout_height="80dp"
                            android:scaleType="fitCenter"
                            android:contentDescription="@string/app_name" />

                    </LinearLayout>

                    <include layout="@layout/view_layout" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/productLayout"
                        tools:ignore="MissingConstraints">

                        <TextView
                            style="@style/TextStyle"
                            android:text="Product Name"
                            android:textStyle="bold"
                            android:textSize="@dimen/C12dp"
                            android:id="@+id/txt_name"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/productLayout"
                            android:orientation="horizontal"
                            android:weightSum="1"

                            >
                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight=".2"
                                android:text="Qty"
                                android:textStyle="bold"
                                android:textSize="@dimen/C12dp"
                                android:paddingLeft="@dimen/C5dp"
                                android:id="@+id/txt_qty"
                                />
                            <!--        android:layout_width="@dimen/C40dp"-->
                            <TextView

                                style="@style/TextStyle"
                                android:id="@+id/txt_rate"
                                android:textSize="@dimen/C12dp"
                                android:paddingLeft="@dimen/C5dp"
                                android:layout_weight=".2"
                                android:textStyle="bold"
                                android:text="Rate" />
                            <!--        android:layout_width="@dimen/C50dp"-->
                            <TextView
                                style="@style/TextStyle"
                                android:id="@+id/txt_discount"
                                android:textSize="@dimen/C12dp"
                                android:paddingLeft="@dimen/C5dp"
                                android:layout_weight=".2"
                                android:textStyle="bold"
                                android:text="Discount" />
                            <!--        android:layout_width="@dimen/C70dp"-->
                            <TextView
                                style="@style/TextStyle"
                                android:id="@+id/txt_tax"
                                android:textSize="@dimen/C12dp"
                                android:textStyle="bold"
                                android:paddingLeft="@dimen/C5dp"
                                android:layout_weight=".2"
                                android:text="Tax" />

                            <!--        android:layout_width="@dimen/C40dp"-->

                            <TextView
                                style="@style/TextStyle"
                                android:textStyle="bold"
                                android:text="Value"
                                android:textSize="@dimen/C12dp"
                                android:paddingLeft="@dimen/C10dp"
                                android:layout_weight=".2"
                                android:id="@+id/txt_total" />
                            <!--        android:layout_width="@dimen/C70dp"-->
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/productLayout"
                            android:orientation="horizontal"
                            android:weightSum="1">
                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight=".2"
                                android:text="Free"
                                android:textStyle="bold"
                                android:textSize="@dimen/C12dp"
                                android:paddingLeft="@dimen/C5dp"
                                android:id="@+id/txt_free"
                                />
                            <!--        android:layout_width="@dimen/C40dp"-->
                            <TextView

                                style="@style/TextStyle"
                                android:textSize="@dimen/C12dp"
                                android:paddingLeft="@dimen/C5dp"
                                android:layout_weight=".2"
                                android:textStyle="bold"
                                android:text="" />
                            <!--        android:layout_width="@dimen/C50dp"-->
                            <TextView
                                style="@style/TextStyle"
                                android:textSize="@dimen/C12dp"
                                android:paddingLeft="@dimen/C5dp"
                                android:layout_weight=".2"
                                android:textStyle="bold"
                                android:text="" />
                            <!--        android:layout_width="@dimen/C70dp"-->
                            <TextView
                                style="@style/TextStyle"
                                android:textSize="@dimen/C12dp"
                                android:textStyle="bold"
                                android:paddingLeft="@dimen/C5dp"
                                android:layout_weight=".2"
                                android:text="" />

                            <!--        android:layout_width="@dimen/C40dp"-->

                            <TextView
                                style="@style/TextStyle"
                                android:textStyle="bold"
                                android:text=""
                                android:textSize="@dimen/C12dp"
                                android:paddingLeft="@dimen/C10dp"
                                android:layout_weight=".2" />
                            <!--        android:layout_width="@dimen/C70dp"-->
                        </LinearLayout>
                    </LinearLayout>

                    <!--        <LinearLayout-->
                    <!--            android:layout_width="match_parent"-->
                    <!--            android:layout_height="wrap_content">-->

                    <!--            <TextView-->
                    <!--                style="@style/TextStyle"-->
                    <!--                android:layout_width="@dimen/C100dp"-->
                    <!--                android:text="Product Name"-->
