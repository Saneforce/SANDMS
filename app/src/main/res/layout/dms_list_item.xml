<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/C10dp"
        app:cardUseCompatPadding="true">
    <LinearLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/C16dp"
        android:layout_marginRight="@dimen/C16dp"
        android:layout_marginBottom="@dimen/C10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/itml1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/C10dp"
                android:text="Customer Name"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_weight="1"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/C10dp"
                android:background="@drawable/status_bggreen">
                <TextView
                    android:id="@+id/itml1c1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/C10dp"
                    android:layout_marginRight="@dimen/C10dp"
                    android:text="Rs. 50,0000"
                    android:gravity="right"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:padding="@dimen/C2dp"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
            <TextView
                android:id="@+id/itml2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send the primary order to the company "
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/itml3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile No"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_weight="1"
                />
            </LinearLayout>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:elevation="6dp"
                    android:layout_marginTop="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    app:tint="@color/IconColor"
                    android:src="@drawable/phone_24"/>


        </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>