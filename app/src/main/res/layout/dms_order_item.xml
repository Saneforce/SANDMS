<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/pProduct"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/C10dp">
    <LinearLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/C10dp"
        android:layout_marginRight="@dimen/C10dp">
        <TextView
            android:id="@+id/itml1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/C10dp"
            android:text="Product Name"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_weight="1"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/C5dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/status_bggreen">
                <TextView
                    android:id="@+id/itml1c1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/C10dp"
                    android:layout_marginRight="@dimen/C10dp"
                    android:text="Rs. 0.00"
                    android:gravity="right"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:padding="@dimen/C2dp"
                    />
            </LinearLayout>
            <Space
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/linUMO"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rzp_border"
                android:paddingLeft="@dimen/C5dp"
                android:paddingRight="@dimen/C5dp"
                android:paddingTop="@dimen/C3dp"
                android:paddingBottom="@dimen/C2dp"
                android:layout_marginRight="@dimen/C15dp">
            <TextView
                android:id="@+id/txUMO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crt"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/C15dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                />
                <ImageView
                    android:layout_width="@dimen/C10dp"
                    android:layout_height="@dimen/C10dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/C10dp"
                    android:src="@drawable/spin_down_arrow"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/txQty"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rzp_border"
                    android:paddingLeft="@dimen/C5dp"
                    android:paddingRight="@dimen/C5dp"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:padding="3sp"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/vw_tl"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/C10dp"
            android:background="@color/grey_line1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txTotAmt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_margin="5dp"
                android:text="0.00"/>
        </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>