<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_event_capture"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/C5dp"
    android:background="#00ECEAEA"
    android:orientation="horizontal"
    app:strokeColor="@android:color/holo_blue_dark"
    tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/C5dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_captured"
                android:layout_width="@dimen/C70dp"
                android:layout_height="@dimen/C70dp"
                android:padding="@dimen/C5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/edt_title"
                style="@style/TextStyle"
                android:hint="Enter the title" />


            <TextView
                android:id="@+id/edt_remarks"
                style="@style/TextStyle"
                android:hint="Enter the remarks" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp">

                    <ImageView
                        android:id="@+id/delete_product"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/delete_cart"
                        android:visibility="gone" />
                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

