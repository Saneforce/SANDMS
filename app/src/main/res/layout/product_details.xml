<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_category"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/textColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="@dimen/C2dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:padding="@dimen/C5dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/child_product_name"
                            style="@style/TextStyle"
                            android:layout_weight="1"
                            android:text="SAN Honey-Almond Cold"
                            android:textSize="15sp" />

<!--                        android:background="@drawable/oval_background"-->


                        <LinearLayout
                            android:id="@+id/image_down"
                            android:layout_width="wrap_content"
                            android:background="@drawable/oval_background"
                            android:paddingHorizontal="5dp"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/child_pro_unit"
                                style="@style/TextStyle"
                                android:text="BOX"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/appColor"
                                android:textSize="13sp"
                                android:maxLines="1"
                                android:maxLength="5"
                                android:textStyle="bold" />
                            <LinearLayout
                                android:layout_width="16dp"
                                android:layout_height="12dp"
                                android:background="@drawable/expan"
                                android:gravity="center">


                            </LinearLayout>
                        </LinearLayout>


<!--                        <ImageView-->
<!--                            android:id="@+id/child_pro_units"-->
<!--                            android:src="@drawable/expand24"-->
<!--                            android:textColor="@color/appColor"-->
<!--                            android:textSize="@dimen/C15dp"-->
<!--                            android:padding="@dimen/C5dp"-->
<!--                            android:layout_marginRight="@dimen/C5dp"-->
<!--                            android:layout_marginLeft="@dimen/C5dp"-->
<!--                            android:textStyle="bold"-->
<!--                            android:layout_width="24dp"-->
<!--                            android:layout_height="match_parent" />-->
<!--                  -->

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/child_product_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:textSize="14dp"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="4dp"
                                android:text="X"
                                android:textColor="@android:color/black"
                                android:textSize="12dp"/>

                            <TextView
                                android:id="@+id/product_item_qty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingLeft="4dp"
                                android:text=""
                                android:textColor="@android:color/black"
                                android:textSize="14dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="4dp"
                                android:text="="
                                android:textColor="@android:color/black"
                                android:textSize="12dp"/>

                            <TextView
                                android:id="@+id/product_item_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="4dp"
                                android:text=""
                                android:textColor="@android:color/black"
                                android:textSize="14dp"/>

                            <!--<LinearLayout
                                android:id="@+id/ll_disc_reduction"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="4dp"
                                    android:text=" - "
                                    android:textColor="@android:color/black"
                                    android:textSize="14dp"/>

                                <TextView
                                    android:id="@+id/tv_disc_amt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="4dp"
                                    android:text="0"
                                    android:textColor="@android:color/black"
                                    android:textSize="14dp"/>


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="4dp"
                                    android:text=" = "
                                    android:textColor="@android:color/black"
                                    android:textSize="14dp"/>

                                <TextView
                                    android:id="@+id/tv_disc_amt_total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="4dp"
                                    android:text="0"
                                    android:textColor="@android:color/black"
                                    android:textSize="14dp"/>



                            </LinearLayout>-->
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:id="@+id/item_info"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:visibility="gone"
                                android:src="@drawable/info"
                                android:layout_width="@dimen/C30dp"
                                android:layout_height="@dimen/C30dp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginStart="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:id="@+id/ll_disc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/C10dp"
                                    android:layout_marginTop="@dimen/C4dp">

                                    <TextView
                                        style="@style/TextStyle"
                                        android:layout_margin="-10dp"
                                        android:text="Dis : "
                                        android:textSize="14dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/txt_dis"
                                        style="@style/TextStyle"
                                        android:layout_margin="-10dp"
                                        android:text="0"
                                        android:textSize="13dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/C4dp">

                                    <TextView
                                        style="@style/TextStyle"
                                        android:layout_margin="-10dp"
                                        android:text="Dis Amt: "
                                        android:textSize="14dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/txt_dis_amt"
                                        style="@style/TextStyle"
                                        android:layout_margin="-10dp"
                                        android:textSize="13dp" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/C4dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/C4dp">

                                    <TextView
                                        style="@style/TextStyle"
                                        android:layout_margin="-10dp"
                                        android:text="Tax : "
                                        android:textSize="14dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/txt_tax"
                                        style="@style/TextStyle"
                                        android:layout_margin="-10dp"
                                        android:text="0"
                                        android:textSize="13dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/C10dp"

                                    android:layout_marginTop="@dimen/C4dp">

                                    <TextView
                                        style="@style/TextStyle"
                                        android:layout_margin="-10dp"
                                        android:text="Tax Amt : "
                                        android:textSize="14dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/txt_tax_amt"
                                        style="@style/TextStyle"
                                        android:layout_margin="-10dp"
                                        android:textSize="13dp" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/ll_free_qty"
                                android:visibility="visible"
                                android:layout_marginTop="@dimen/C4dp">

                                <TextView
                                    style="@style/TextStyle"
                                    android:layout_margin="-10dp"
                                    android:text="Free : "
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_free_qty"
                                    style="@style/TextStyle"
                                    android:text="0"
                                    android:layout_margin="-10dp"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="visible"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="@dimen/C4dp">

                                <TextView
                                    style="@style/TextStyle"
                                    android:layout_margin="-10dp"
                                    android:text="Total : "
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_final_total_amt"
                                    style="@style/TextStyle"
                                    android:text="0"
                                    android:layout_margin="-10dp"
                                    android:textSize="13sp" />
                            </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/c35dp"
                            android:layout_gravity="center"
                            android:gravity="end"
                            tools:ignore="MissingConstraints">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true">


                                <LinearLayout
                                    android:id="@+id/linear_add"
                                    android:layout_width="@dimen/c110dp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/oval_background">


                                    <LinearLayout
                                        android:id="@+id/image_minus"
                                        android:layout_width="@dimen/c38dp"
                                        android:layout_height="match_parent"
                                        android:gravity="center">

                                        <LinearLayout
                                            android:layout_width="16dp"
                                            android:layout_height="12dp"
                                            android:layout_marginLeft="8dp"
                                            android:background="@drawable/minus"
                                            android:gravity="center"></LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/disable_minus"
                                        android:layout_width="@dimen/c38dp"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:visibility="gone">

                                        <LinearLayout
                                            android:layout_width="16dp"
                                            android:layout_height="12dp"
                                            android:layout_margin="8dp"
                                            android:background="@drawable/minus"
                                            android:gravity="center"></LinearLayout>
                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/product_count_increment"
                                        android:layout_width="@dimen/C50dp"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:background="@android:color/transparent"
                                        android:inputType="number"
                                        android:maxLength="3"
                                        android:padding="5dp"
                                        android:text="0"
                                        android:visibility="gone"></TextView>

                                    <TextView
                                        android:id="@+id/text_view_count"
                                        android:layout_width="35dp"
                                        android:layout_height="match_parent"
                                        android:background="@android:color/transparent"
                                        android:gravity="center"
                                        android:inputType="number"
                                        android:maxLength="3"
                                        android:text="0" />

                                    <LinearLayout
                                        android:id="@+id/image_plus"
                                        android:layout_width="38dp"
                                        android:layout_height="match_parent"
                                        android:gravity="center">

                                        <LinearLayout
                                            android:layout_width="13dp"
                                            android:layout_height="10dp"
                                            android:layout_marginLeft="5dp"
                                            android:background="@drawable/plus"
                                            android:gravity="center"/>

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_grey"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>