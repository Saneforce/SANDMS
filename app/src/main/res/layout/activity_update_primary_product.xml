<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/C5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:tag="cards main container"
        tools:ignore="MissingConstraints">

        <androidx.cardview.widget.CardView
            xmlns:card_view="https://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/C20dp"
            card_view:cardBackgroundColor="#FFF"
            card_view:cardCornerRadius="50dp"
            tools:ignore="MissingConstraints">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/child_product_name"
                            style="@style/TextStyle"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1"
                            android:text="SAN Honey-Almond Cold"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/txt_product_unit"
                            style="@style/TextStyle"
                            android:textStyle="bold"
                            android:textColor="@color/appColor"
                            android:textSize="@dimen/C17dp"/>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/C4dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/C4dp">

                                    <TextView
                                        style="@style/TextStyle"
                                        android:layout_margin="-10dp"
                                        android:text="Tax : "
                                        android:textSize="14dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/txt_tax"
                                        style="@style/TextStyle"
                                        android:layout_margin="-10dp"
                                        android:text="0"
                                        android:textSize="13dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/C10dp"

                                    android:layout_marginTop="@dimen/C4dp">

                                    <TextView
                                        style="@style/TextStyle"
                                        android:layout_margin="-10dp"
                                        android:text="Tax Amt : "
                                        android:textSize="14dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/txt_tax_amt"
                                        style="@style/TextStyle"
                                        android:layout_margin="-10dp"
                                        android:textSize="13dp" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/C4dp">

                                    <TextView
                                        style="@style/TextStyle"
                                        android:layout_margin="-10dp"
                                        android:text="Dis : "
                                        android:textSize="14dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/txt_dis"
                                        style="@style/TextStyle"
                                        android:layout_margin="-10dp"
                                        android:text="0"
                                        android:textSize="13dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/C10dp"
                                    android:layout_marginTop="@dimen/C4dp">

                                    <TextView
                                        style="@style/TextStyle"
                                        android:layout_margin="-10dp"
                                        android:text="Dis Amt: "
                                        android:textSize="14dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/txt_dis_amt"
                                        style="@style/TextStyle"
                                        android:layout_margin="-10dp"
                                        android:textSize="13dp" />
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/c35dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            tools:ignore="MissingConstraints">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true">


                                <LinearLayout
                                    android:id="@+id/linear_add"
                                    android:layout_width="@dimen/c110dp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/oval_background"
                                    android:orientation="vertical">


                                    <LinearLayout
                                        android:id="@+id/image_minus"
                                        android:layout_width="@dimen/c38dp"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:visibility="gone">

                                        <LinearLayout
                                            android:layout_width="16dp"
                                            android:layout_height="12dp"
                                            android:layout_marginLeft="8dp"
                                            android:background="@drawable/minus"
                                            android:gravity="center"></LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/disable_minus"
                                        android:layout_width="@dimen/c38dp"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:visibility="gone">

                                        <LinearLayout
                                            android:layout_width="16dp"
                                            android:layout_height="12dp"
                                            android:layout_margin="8dp"
                                            android:background="@drawable/minus"
                                            android:gravity="center">

                                        </LinearLayout>
                                    </LinearLayout>

                                   <EditText
                                        android:id="@+id/edt_product_count_inc_dec"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:background="@android:color/transparent"
                                        android:gravity="center"
                                        android:inputType="number"
                                        android:maxLength="3"
                                        android:padding="5dp"
                                        android:hint="0"/>

                                    <TextView
                                        android:id="@+id/text_view_count"
                                        android:layout_width="35dp"
                                        android:layout_height="match_parent"
                                        android:background="@android:color/transparent"
                                        android:gravity="center"
                                        android:inputType="number"
                                        android:maxLength="3"
                                        android:text=""
                                        android:visibility="gone" />

                                    <LinearLayout
                                        android:id="@+id/image_plus"
                                        android:layout_width="38dp"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:visibility="gone">

                                        <LinearLayout
                                            android:layout_width="13dp"
                                            android:layout_height="10dp"
                                            android:layout_marginLeft="5dp"
                                            android:background="@drawable/plus"
                                            android:gravity="center"></LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/child_product_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="10dp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="4dp"
                            android:text="X"
                            android:textColor="@android:color/black"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/product_item_qty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingLeft="4dp"
                            android:text=""
                            android:textColor="@android:color/black"
                            android:textSize="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="4dp"
                            android:text="="
                            android:textColor="@android:color/black"
                            android:textSize="10sp"/>

                        <TextView
                            android:id="@+id/product_item_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="4dp"
                            android:text=""
                            android:textColor="@android:color/black"
                            android:textSize="10sp"/>
                    </LinearLayout>
                </LinearLayout>


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/C10dp"
                    android:background="@drawable/button_color_theme"
                    android:onClick="UpdateProduct"
                    android:text="update"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>