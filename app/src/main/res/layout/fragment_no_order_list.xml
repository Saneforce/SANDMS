<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/scrolllayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.ReportActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/ns_order_details"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_back"
            android:orientation="vertical"
            android:visibility="visible"
            android:id="@+id/linearlayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                   android:id="@+id/dist_name"
                    style="@style/TextStyle"
                    android:layout_margin="4dp"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
                <TextView
                   android:id="@+id/tv_erp_code"
                    style="@style/TextStyle"
                    android:layout_margin="4dp"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        style="@style/TextStyle"
                        android:layout_gravity="center"
                        android:text="From :"/>

                    <Button
                        android:id="@+id/from_picker"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/text_bg"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/prm_linear_orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                       style="@style/TextStyle"
                        android:layout_gravity="center"
                        android:text="To :"/>

                    <Button
                        android:id="@+id/to_picker"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/text_bg"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/view_layout"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/headingLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Sno"
                    android:paddingStart="5dp"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="11sp"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeStepGranularity="2sp"
                    android:textStyle="bold"
                    tools:targetApi="o"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="OrderID"
                    android:paddingStart="5dp"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="11sp"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeStepGranularity="2sp"
                    android:textStyle="bold"
                    tools:targetApi="o"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="OrderDate"
                    android:paddingStart="5dp"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="11sp"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeStepGranularity="2sp"
                    android:textStyle="bold"
                    tools:targetApi="o"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="OrderType"
                    android:paddingStart="5dp"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="11sp"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeStepGranularity="2sp"
                    android:textStyle="bold"
                    tools:targetApi="o"/>

            </LinearLayout>

            <include layout="@layout/view_layout"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerlinear"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/report_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/row_report_list"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/bottom_linear"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:padding="@dimen/C5dp"
                android:layout_height="match_parent">

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>