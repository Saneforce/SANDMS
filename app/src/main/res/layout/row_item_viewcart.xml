<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="https://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/C5dp"
    android:padding="@dimen/C5dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:cardCornerRadius="4dp"
        app:strokeColor="@color/greyColor"
        app:strokeWidth="0.5dp"
        card_view:cardBackgroundColor="#FFF"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/C10dp"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/image_product"
                        android:layout_width="@dimen/C80dp"
                        android:layout_height="@dimen/C80dp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:scaleType="fitCenter"
                        android:src="@drawable/logo" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/C10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:id="@+id/item_product_name"
                                style="@style/TextStyle"
                                android:gravity="center_vertical"
                                android:layout_height="wrap_content"
                                android:text="xccxcxz"
                                android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/child_pro_unit"
                                    style="@style/TextStyle"
                                    android:background="@drawable/oval_background"
                                    android:text="BOX"
                                    android:padding="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/appColor"
                                    android:textSize="13sp"
                                    android:maxLines="1"
                                    android:layout_gravity=""
                                    android:maxLength="5"
                                    android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/item_price"
                                style="@style/TextStyle"
                                android:textSize="12sp" />

                            <TextView
                                style="@style/TextStyle"
                                android:text="X"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/item_qty"
                                style="@style/TextStyle"
                                android:textSize="12sp" />

                            <TextView
                                style="@style/TextStyle"
                                android:text="="
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/item_amount"
                                style="@style/TextStyle"
                                android:textSize="12sp" />

                        </LinearLayout>

                            <LinearLayout

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:id="@+id/ll_disc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        style="@style/TextStyle"
                                        android:text="Dis : "
                                        android:textSize="12sp"
                                         />

                                    <TextView
                                        android:id="@+id/txt_dis"
                                        style="@style/TextStyle"
                                        android:text="0"
                                        android:textSize="12sp" />
                                </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/TextStyle"
                                android:text="Dis Amt:"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/item_dis_amount"
                                style="@style/TextStyle"
                                android:textSize="12sp" />

                        </LinearLayout>
                            </LinearLayout>

                        <LinearLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/TextStyle"
                                android:text="Tax :"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/item_tax"
                                style="@style/TextStyle"
                                android:textSize="12sp" />

                        </LinearLayout>
                            <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/TextStyle"
                                android:text="Tax Amt:"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/item_tax_amount"
                                style="@style/TextStyle"
                                android:textSize="12sp" />

                        </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/TextStyle"
                                    android:text="Free : "
                                    android:textSize="14sp"/>

                                <TextView
                                    android:id="@+id/tv_free_qty"
                                    style="@style/TextStyle"
                                    android:text="0"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_free_unit"
                                    style="@style/TextStyle"
                                    android:layout_marginStart="3dp"
                                    android:text=""
                                    android:textSize="12sp" />
                            </LinearLayout>

                           <!-- <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="visible"
                                android:layout_marginStart="3dp">

                                <TextView
                                    style="@style/TextStyle"
                                    android:text="Total : "
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_final_total_amt"
                                    style="@style/TextStyle"
                                    android:text="0"
                                    android:textSize="12sp" />
                            </LinearLayout>-->
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/C100dp"
                        android:layout_height="@dimen/C30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/C15dp"
                        android:layout_marginRight="@dimen/C15dp"
                        android:background="@drawable/oval_background"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/edit_qty"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="3"
                            android:textSize="@dimen/C14dp" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_margin="@dimen/C10dp"
                android:background="@color/greyColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Total : "
                        android:textColor="@android:color/black"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/total_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="0"
                        android:textColor="@android:color/black"
                        android:textSize="13dp" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/edit_product"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/edit"
                    android:scaleType="fitCenter"
                    android:visibility="visible" />
                <ImageView
                    android:id="@+id/delete_product"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/delete_cart"
                    android:onClick="DeleteOrder"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>