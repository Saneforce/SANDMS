<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rzp_border_bottom">

        <LinearLayout
            android:id="@+id/parent_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/C16dp"
            android:layout_marginRight="@dimen/C16dp"
            android:layout_marginBottom="@dimen/C10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/itmName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/C10dp"
                    android:text="Customer Name"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/C10dp"
                    android:background="@drawable/card_border"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/itmCqty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/C20dp"
                        android:layout_marginRight="@dimen/C20dp"
                        android:text="50"
                        android:gravity="right"
                        android:textColor="#333"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:padding="@dimen/C2dp"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/UOMDet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Send the primary order to the company "
                    android:textSize="12sp"
                    />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>